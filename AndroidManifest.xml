<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.easwareapps.marbleone_ad_free"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="auto" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_pebble_blue"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.easwareapps.marbleone_ad_free.MASPebbleActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.easwareapps.marbleone_ad_free.PauseGame"
            android:label="@string/title_pause"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name="com.easwareapps.marbleone_ad_free.GameOver"
            android:label="@string/title_pause"
            android:theme="@style/Theme.Transparent" >
        </activity>
        <activity
            android:name="com.easwareapps.marbleone_ad_free.Browser">
        </activity>
        <activity
            android:name="com.easwareapps.marbleone_ad_free.SelectMarble">
        </activity>

    </application>

</manifest>
